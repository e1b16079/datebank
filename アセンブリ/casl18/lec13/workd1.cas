PRG1301	START
	IN	IBUF,ILEN	
	LAD	GR3,0
	LAD	GR1,0
LOOP1	CPA	GR3,ILEN
	JZE	EXIT1
	LD	GR2,IBUF,GR3
	ST	GR2,OBUF,GR1
	ADDA	GR3,=1
	ADDA	GR1,=1
	JUMP	LOOP1
EXIT1	SUBA	GR3,=1
LOOP2	CPA	GR3,=0
	JMI	EXIT2
	LD	GR2,IBUF,GR3
	ST	GR2,OBUF,GR1
	ADDA	GR3,=-1
	ADDA	GR1,=1
	JUMP	LOOP2
EXIT2	ST	GR1,OLEN
	OUT	OBUF,OLEN
	RET
IBUF	DS	10
ILEN	DS	1
OBUF	DS	20
OLEN	DS	1
	END
