#include<stdio.h>

int main(void){

    int a;
    int b;
    int x;
    int y;

    printf("所持金を入力して下さい\n");
    scanf("%d",&a);

    printf("りんごの単価を入力してください\n");
    scanf("%d",&b);

    x= a/ b;
   
    printf("りんごを%d個購入できます。\n", x);

    y=a-(b*x);

    printf("その場合の残金は%d円となります。\n", y);

    return 0;
}					
